<%= form_for @user_session, :html => {:class => "form-signin"} do |f| %>
  <% if @user_session.errors.any? %>
    <div class="alert alert-error">
      <strong>Oops.</strong> Your email and password did not match. Please try again.
    </div>
  <% end %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.text_field :email, :class => "input-block-level", :placeholder => "Email address" %>
  <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %>
  <button class="btn btn-large btn-primary" type="submit">Sign in</button>
<% end %>

<% unless @user_session.errors.any? %>
  <% content_for :jquery do %>
    <%= javascript_tag do %>
      $(function() {
        $("#user_session_email").focus();
      });
    <% end %>
  <% end %>
<% end %>
