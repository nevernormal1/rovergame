<%= form_for @user, :html => {:class => "form-signin"} do |f| %>
  <h2 class="form-signin-heading">Start a New Game</h2>
  <%= f.text_field :name, :class => "input-block-level", :placeholder => "Your name" %>
  <%= f.text_field :email, :class => "input-block-level", :placeholder => "Email address" %>
  <%= f.password_field :password, :class => "input-block-level", :placeholder => "Choose a password" %>
  <button class="btn btn-large btn-primary" type="submit">Start</button>
<% end %>

<% unless @user.errors.any? %>
  <% content_for :jquery do %>
    <%= javascript_tag do %>
      $(function() {
        $("#user_name").focus();
      });
    <% end %>
  <% end %>
<% end %>


